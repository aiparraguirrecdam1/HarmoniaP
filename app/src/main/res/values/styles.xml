<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Fuente_kameron" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/kameronregular</item>
    </style>
    <style name="Fuente_TimesNewRoman" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/kameronregular</item>
    </style>
    <style name="Theme.AnimatedSplash" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/kameronregular</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="Theme.AnimatedSplash.MySplash" parent="Theme.AppCompat">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/blanco</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/avd_anim</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">2500</item>
    </style>

    <style name="MiProgressBarHorizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:height">10dp</item>

    </style>

    <style name="PinkProgressBar">
        <item name="android:progressDrawable">@drawable/pink_progress_horizontal</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="SelectedTabTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>
